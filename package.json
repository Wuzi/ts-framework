    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.37",
    "@types/method-override": "^0.0.30",
    "@types/mongoose": "^4.7.23",
    "@types/raven": "^2.1.2",
    "@types/winston": "^2.3.6",
    "async": "^2.5.0",
    "base64url": "^2.0.0",
    "body-parser": "^1.18.2",
    "clean-stack": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-oauth-server": "^2.0.0",
    "express-useragent": "^1.0.8",
